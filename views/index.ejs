<!DOCTYPE html>
<html>
  <head>
      <meta charset="UTF-8">
      <title>github.yourself</title>

      <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css">
      <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap-theme.min.css">
      <link rel="stylesheet" href="/lib/chartjs.package.css"/>
      <link rel='stylesheet' href='/css/style.css' />

      <script src="//code.jquery.com/jquery-2.1.3.min.js"></script>
      <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js"></script>

      <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.3.13/angular.min.js"></script>
      <script src="//cdnjs.cloudflare.com/ajax/libs/moment.js/2.9.0/moment.min.js"></script>

      <script src="/lib/chartjs.package.js"></script>

      <script>
          var user = <%-JSON.stringify(user || {})%>;
        </script>
      <script src="/scripts/homeController.js"></script>
  </head>
  <body ng-app="ghys" ng-controller="homeCtrl">
  <header class="navbar navbar-static-top bs-docs-nav" id="top" role="banner">
      <div class="container">
          <div class="navbar-header">
              <button class="navbar-toggle collapsed" type="button" data-toggle="collapse" data-target=".bs-navbar-collapse">
                  <span class="sr-only">Toggle navigation</span>
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
              </button>
              <a href="/" class="navbar-brand">github.yourself</a>
          </div>
          <nav class="collapse navbar-collapse bs-navbar-collapse">
              <ul class="nav navbar-nav">

              </ul>
              <ul class="nav navbar-nav navbar-right">
                  <li ng-if="!user.id">
                      <a href="/auth/github">Login</a>
                  </li>
                  <li ng-if="user.id" class="user">
                      <a href="{{user._json.html_url}}"><img ng-src="{{user._json.avatar_url}}" class="avatar inline round left" />{{user.displayName}}</a>
                  </li>
                  <li ng-if="user.id" class="logout">
                      <a href="/auth/logout">Logout</a>
                  </li>
                  <!--<li><a href="http://blog.getbootstrap.com" onclick="ga('send', 'event', 'Navbar', 'Community links', 'Blog');">Blog</a></li>-->
              </ul>
          </nav>
      </div>
  </header>

  <div ng-if="user.id" class="container loggedIn">
    <div class="chart col-sm-12 col-md-9">
      <canvas chart-base chart-type="chart.type" data="chart.data" labels="chart.labels" series="chart.series" legend="false" colours="chart.colours" options="chart.options" ></canvas>
        <div class="controls form-inline">
            <div class="form-group">
                <label for="startDate">Start Date:</label>
                <input ng-model="chart.controls.startDate" type="date" id="startDate" class="form-control"/>
            </div>
            <div class="form-group">
                <label for="endDate">End Date:</label>
                <input ng-model="chart.controls.endDate" type="date" id="endDate" class="form-control"/>
            </div>
        </div>
    </div>
    <div class="sidebar right col-md-3">
        <div class="orgs">
            <h3>Orgs</h3>
          <div ng-repeat="org in user.orgs"><img ng-src="{{org.avatar_url}}" class="avatar inline left"/>{{org.login}}</div>
        </div>
          <div>
              <h3>Repos</h3>
              <div ng-repeat="repo in user.repos"><a href="{{repo.html_url}}">{{repo.name}}</a>: {{repo.contribution.total}}</div>
          </div>
      </div>
  </div>
  <footer class="footer">
      <div class="container">
          <p ng-if="user.id" class="text-muted">Rate Limit Remaining: {{rateLimit}}</p>
      </div>
  </footer>
  </body>
</html>
